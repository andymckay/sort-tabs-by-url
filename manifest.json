{
  "manifest_version": 2,
  "name": "Sort Tabs by URL",
  "version": "0.9",
  "applications": {
    "gecko": {
      "id": "jid0-uRZpLu7VtYEF3IY7A2TpX21yj3A@jetpack"
    }
  },
  "browser_action": {
      "default_title": "Sort tabs by URL",
      "default_icon": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png"
    },
    "browser_style": true
  },
  "background": {
      "scripts": ["background.js"]
  },
  "permissions": [
      "fo",
      "contextMenus",
      "menus",
      "tabs"
  ],
  "commands": {
      "sort-tabs": {
          "suggested_key": {
              "default": "Ctrl+Shift+O",
              "mac": "Command+Shift+O"
          },
          "description": "Sort tabs"
      }
  },
  "icons": {
      "48": "icon-48.png"
  }
}
